<article>
  <stack-l space="var(--s3)">
    <h2 class="text-center">⚡️ Weekly Highlight ⚡️</h2>
    <ul>
      {% for stack in stacks | randomItem %}
        <li>
          <h4>{{ stack.title }}</h4>
          <ul>
            {# Figure out how to do a nested iteration over item, which is an array #}
            {% for layer, items in stack.techStack %}
              <li>{{ layer }}: {{ items }}</li>
            {% endfor %}
          </ul>
        </li>
      {% endfor %}
    </ul>
    <center-l>
      <box-l borderWidth="0px">
        <p>
          <a href="/about">About the project</a>
        </p>
        <p>
          {% for stack in stacks | randomItem %}
            {% if loop.first %}
              {% set linkToStacks = stack.title %}
            {% endif %}
          {% endfor %}
          {# How do I link to stacks without necesarilly knowing what the final page path will be? #}
          <a href="/stacks">View all stacks!</a>
        </p>
      </box-l>
    </center-l>
  </stack-l>
</article>

